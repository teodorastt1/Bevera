@model Bevera.Models.ViewModels.ClientProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <h2 class="mb-3" style="font-family:'Playfair Display',serif;">User Information</h2>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-4 p-4 border-end">
                <div class="d-flex align-items-center gap-3">
                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width:72px;height:72px;">
                        <i class="bi bi-person" style="font-size:2rem;"></i>
                    </div>
                    <div>
                        <div class="fw-bold">@Model.FullName</div>
                        <div class="text-muted">@Model.Email</div>
                    </div>
                </div>

                <a class="btn btn-warning mt-3 rounded-pill fw-semibold" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-pencil-square me-1"></i> Edit Details
                </a>
            </div>

            <div class="col-md-8 p-4">
                <ul class="nav nav-tabs" id="profileTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="basic-tab" data-bs-toggle="tab" data-bs-target="#basic" type="button" role="tab">
                            <i class="bi bi-person-lines-fill me-1"></i> Basic Info
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">
                            <i class="bi bi-bag-check me-1"></i> Purchased History
                        </button>
                    </li>
                </ul>

                <div class="tab-content pt-3">
                    <div class="tab-pane fade show active" id="basic" role="tabpanel">
                        <div class="row">
                            <div class="col-sm-4 text-muted">Full Name</div>
                            <div class="col-sm-8 fw-semibold">@Model.FullName</div>

                            <div class="col-sm-4 text-muted mt-2">Email</div>
                            <div class="col-sm-8 mt-2">@Model.Email</div>

                            <div class="col-sm-4 text-muted mt-2">Phone</div>
                            <div class="col-sm-8 mt-2">@Model.PhoneNumber</div>

                            <div class="col-sm-4 text-muted mt-2">Address</div>
                            <div class="col-sm-8 mt-2">@Model.Address</div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="orders" role="tabpanel">
                        @if (!Model.Orders.Any())
                        {
                            <div class="text-muted">No orders yet.</div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table align-middle">
                                    <thead>
                                        <tr>
                                            <th>Order #</th>
                                            <th>Date</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th class="text-end"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var o in Model.Orders)
                                        {
                                            <tr>
                                                <td class="fw-semibold">#@o.OrderId</td>
                                                <td>@o.CreatedAt</td>
                                                <td>@o.Total.ToString("0.00") лв.</td>
                                                <td>
                                                    <span class="badge bg-secondary">@o.Status</span>
                                                </td>
                                                <td class="text-end">
                                                    <a class="btn btn-sm btn-outline-dark"
                                                       asp-controller="Orders"
                                                       asp-action="Invoice"
                                                       asp-route-id="@o.OrderId">
                                                        <i class="bi bi-file-earmark-text me-1"></i> Invoice
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-3">
                    <span class="text-muted">Thirsty? Why not order drinks for you.</span>
                    <a class="btn btn-sm btn-primary ms-2" asp-controller="Products" asp-action="Index">Click to Order</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
