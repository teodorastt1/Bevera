<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bevera</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bevera.styles.css" asp-append-version="true" />

    <style>
        :root {
            --bevera-accent: #f5b301;
            --bevera-dark: rgba(10, 12, 14, .65);
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
        }

        /* NAVBAR */
        .bevera-navbar {
            background: var(--bevera-dark);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255,255,255,.08);
        }

        .bevera-navbar .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            color: #fff !important;
            font-size: 1.6rem;
            letter-spacing: .5px;
        }

        .bevera-navbar .nav-link {
            color: rgba(255,255,255,.85) !important;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: .08em;
            font-size: .9rem;
            padding: .75rem 1rem;
        }

        .bevera-navbar .nav-link:hover {
            color: #fff !important;
        }

        /* фикснат navbar offset */
        .page-content { padding-top: 72px; }
        body.home .page-content { padding-top: 0; }
        html { scroll-padding-top: 90px; }

        /* Search */
        .bevera-search .form-control {
            border-radius: 999px;
            border: 1px solid rgba(255,255,255,.18);
            background: rgba(255,255,255,.10);
            color: #fff;
        }
        .bevera-search .form-control::placeholder { color: rgba(255,255,255,.75); }
        .bevera-search .btn {
            border-radius: 999px;
            background: var(--bevera-accent);
            border: 0;
            color: #111;
            font-weight: 700;
        }

        /* Mega menu container (центриран, като в примера) */
        .bevera-mega-menu {
            width: min(1100px, calc(100vw - 24px));
            margin: 0 auto;
            border-radius: 18px;
            border: 1px solid rgba(0,0,0,.08);
            box-shadow: 0 18px 45px rgba(0,0,0,.18);
            padding: 18px;
        }

        /* Grid вътре (ако Default.cshtml ползва mega-grid) */
        .mega-grid {
            display: grid;
            grid-template-columns: repeat(4, minmax(180px, 1fr));
            gap: 22px;
        }

        .mega-col-title {
            font-weight: 800;
            font-size: 1.05rem;
            margin-bottom: 10px;
            color: #0b5566;
        }

        .mega-link {
            display: block;
            padding: 6px 8px;
            border-radius: 10px;
            text-decoration: none;
            color: #111;
            font-weight: 600;
        }

        .mega-link:hover {
            background: rgba(245,179,1,.16);
        }

        /* НЕ ПОЛЗВАМЕ hover open CSS -> само Bootstrap click (стабилно) */
    </style>
</head>

<body class="@(ViewData["BodyClass"] ?? "")">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bevera-navbar fixed-top">
            <div class="container">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Bevera</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#beveraNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="beveraNav">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-3 align-items-lg-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown"
                               data-bs-auto-close="outside"
                               aria-expanded="false">
                                По категории
                            </a>

                            <div class="dropdown-menu bevera-mega-menu">
                                @await Component.InvokeAsync("CategoriesMenu")
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/#footer">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/#footer">Contact</a>
                        </li>
                    </ul>

                    <!-- SEARCH (center/right) -->
                    <form class="d-flex bevera-search ms-auto me-3"
                          method="get"
                          asp-controller="Client"
                          asp-action="Search">
                        <input class="form-control form-control-sm"
                               name="q"
                               placeholder="Търси продукт..."
                               style="min-width:260px;" />
                        <button class="btn btn-sm ms-2" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!-- RIGHT -->
                    <div class="d-flex align-items-center">
                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <main class="page-content">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
